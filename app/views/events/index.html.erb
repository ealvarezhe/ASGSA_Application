<div class="Events index">
  <h1>Events</h1>

  <%= link_to("Add New Event", new_event_path, class: 'action new') %>

  <% if @events.empty? %>
    <p>No upcoming events!</p>
  <% else %>	
		<ul>
			<% @events.each do |event| %>
				<li>
					<span style="font-size: 24px; font-weight: bold;"><%= event.name %></span><br>
					Time: <%= event.start_time&.strftime("%I:%M %p") %> - <%= event.end_time&.strftime("%I:%M %p") %><br>
					Date: <%= event.date %><br>
					Capacity: <%= event.capacity || 'No Limit' %><br>
					Points: <%= event.points %>
				</li>
				<p>
					<%= link_to("Show", event_path(event), class: 'action show') %> |
					<%= link_to("Edit", edit_event_path(event), class: 'action edit') %> |
					<%= link_to("Delete", delete_event_path(event), class: 'action delete') %>
				</p>
			<% end %>
		</ul>
	<% end %>
</div>

